{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --legacy-watch --inspect=0.0.0.0:9229 --signal SIGINT --nolazy index.ts",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --testPathPatterns=unit",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --testPathPatterns=integration",
    "build": "tsc",
    "start": "npm run build && pm2 start ./build/index.js --name api --no-daemon",
    "types": "tsc --noEmit --project ./tsconfig.json && tsc --noEmit --project ./tsconfig.node.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.1",
    "mongoose": "^8.4.4",
    "multer": "^1.4.5-lts.2",
    "nodemon": "^3.1.4",
    "pm2": "^6.0.8",
    "redis": "^5.8.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/luxon": "^3.6.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "jest": "^30.0.2",
    "mongodb-memory-server": "^10.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "execMap": {
      "ts": "node --require ts-node/register"
    }
  }
}
